@model BookListViewModel
@{
    ViewData["Title"] = "Knihy";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Knihy</h1>
    <a class="btn btn-primary" asp-action="Create">Přidat knihu</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alert alert-success" role="alert">@Model.Message</div>
}
@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger" role="alert">@Model.Error</div>
}

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row gy-2 gx-3 align-items-end">
            <div class="col-sm-3">
                <label class="form-label" for="title">Název</label>
                <input class="form-control" id="title" name="Title" value="@Model.Filters.Title" placeholder="Celý název nebo část" />
            </div>
            <div class="col-sm-3">
                <label class="form-label" for="author">Autor</label>
                <input class="form-control" id="author" name="Author" value="@Model.Filters.Author" placeholder="Příjmení nebo jméno" />
            </div>
            <div class="col-sm-3">
                <label class="form-label" for="isbn">ISBN</label>
                <input class="form-control" id="isbn" name="Isbn" value="@Model.Filters.Isbn" placeholder="978-80..." />
            </div>
            <div class="col-sm-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Hledat</button>
                @if (Model.Filters.HasFilters)
                {
                    <a asp-action="Index" class="btn btn-secondary">Vymazat</a>
                }
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Název</th>
                <th>Autor</th>
                <th class="d-none d-md-table-cell">Rok</th>
                <th class="d-none d-lg-table-cell">ISBN</th>
                <th>Dostupné / Celkem</th>
                <th class="text-end" style="min-width: 140px;">Akce</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Books.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">Žádné knihy nenalezeny.</td>
                </tr>
            }
            else
            {
                foreach (var book in Model.Books)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td class="d-none d-md-table-cell">@book.PublishedYear</td>
                        <td class="d-none d-lg-table-cell">@book.Isbn</td>
                        <td>
                            <span class="d-none d-sm-inline">@book.AvailableCopies / @book.TotalCopies</span>
                            <span class="d-sm-none">@book.AvailableCopies/@book.TotalCopies</span>
                        </td>
                        <td class="text-end">
                            <div class="d-flex flex-column flex-md-row gap-1 justify-content-end" style="min-width: 120px;">
                                <form asp-action="Loan" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@book.Id" />
                                    <span title="@(book.AvailableCopies <= 0 ? "Žádný kus není k dispozici." : null)">
                                        <button type="submit"
                                                class="btn btn-sm btn-primary w-100 w-md-auto"
                                                @(book.AvailableCopies <= 0 ? "disabled" : "")>
                                            Půjčit
                                        </button>
                                    </span>
                                </form>
                                <form asp-action="Return" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@book.Id" />
                                    <span title="@(book.AvailableCopies >= book.TotalCopies ? "Všechny kusy už jsou v knihovně." : null)">
                                        <button type="submit"
                                                class="btn btn-sm btn-success w-100 w-md-auto"
                                                @(book.AvailableCopies >= book.TotalCopies ? "disabled" : "")>
                                            Vrátit
                                        </button>
                                    </span>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
    <div class="small text-muted">
        Zobrazeno @Model.Books.Count z @Model.TotalCount (strana @Model.Page)
    </div>
    <div class="d-flex align-items-center gap-2 flex-wrap">
        <form method="get" class="d-flex align-items-center gap-2">
            <input type="hidden" name="Title" value="@Model.Filters.Title" />
            <input type="hidden" name="Author" value="@Model.Filters.Author" />
            <input type="hidden" name="Isbn" value="@Model.Filters.Isbn" />
            <input type="hidden" name="Page" value="@(Model.Page - 1)" />
            <input type="hidden" name="PageSize" value="@Model.PageSize" />
            <button type="submit" class="btn btn-outline-secondary btn-sm" @(Model.HasPrevious ? "" : "disabled")>← Zpět</button>
        </form>

        <form method="get" class="d-flex align-items-center gap-2">
            <input type="hidden" name="Title" value="@Model.Filters.Title" />
            <input type="hidden" name="Author" value="@Model.Filters.Author" />
            <input type="hidden" name="Isbn" value="@Model.Filters.Isbn" />
            <input type="hidden" name="Page" value="@(Model.Page + 1)" />
            <input type="hidden" name="PageSize" value="@Model.PageSize" />
            <button type="submit" class="btn btn-outline-secondary btn-sm" @(Model.HasNext ? "" : "disabled")>Další →</button>
        </form>

        <form method="get" class="d-flex align-items-center gap-2">
            <input type="hidden" name="Title" value="@Model.Filters.Title" />
            <input type="hidden" name="Author" value="@Model.Filters.Author" />
            <input type="hidden" name="Isbn" value="@Model.Filters.Isbn" />
            <input type="hidden" name="Page" value="1" />
            <label class="form-label mb-0" for="pageSize">Záznamů</label>
            <select id="pageSize" name="PageSize" class="form-select form-select-sm" onchange="this.form.submit()">
                <option value="5" selected="@(Model.PageSize == 5)">5</option>
                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                <option value="20" selected="@(Model.PageSize == 20)">20</option>
            </select>
        </form>
    </div>
</div>

