<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
</head>
<body>
    <header>
        @{
            var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        }
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary navbar-main shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">LibraryApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Books" ? "active" : null)" asp-area="" asp-controller="Books" asp-action="Index" aria-current="@(currentController == "Books" ? "page" : null)">Knihy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "History" ? "active" : null)" asp-area="" asp-controller="History" asp-action="Index" aria-current="@(currentController == "History" ? "page" : null)">Historie</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2 py-2">
            <div>
                @{
                    var assembly = System.Reflection.Assembly.GetExecutingAssembly();
                    var versionAttrs = assembly.GetCustomAttributes(typeof(System.Reflection.AssemblyInformationalVersionAttribute), false);
                    var version = versionAttrs.Length > 0 
                        ? ((System.Reflection.AssemblyInformationalVersionAttribute)versionAttrs[0]).InformationalVersion 
                        : assembly.GetName().Version?.ToString() ?? "dev";
                    // Odstraň prefix "v" pokud existuje (tagy jsou ve formátu v10.0.0)
                    if (version.StartsWith("v", StringComparison.OrdinalIgnoreCase))
                    {
                        version = version.Substring(1);
                    }
                    // Odstraň commit hash (část za +)
                    var plusIndex = version.IndexOf('+');
                    if (plusIndex > 0)
                    {
                        version = version.Substring(0, plusIndex);
                    }
                    // Pokud je verze "dev", zkus zjistit z git tagu
                    if (version == "dev")
                    {
                        try
                        {
                            var baseDir = System.AppContext.BaseDirectory;
                            var projectDir = System.IO.Path.GetFullPath(System.IO.Path.Combine(baseDir, "../../../.."));
                            var startInfo = new System.Diagnostics.ProcessStartInfo
                            {
                                FileName = "git",
                                Arguments = "describe --tags --exact-match",
                                RedirectStandardOutput = true,
                                RedirectStandardError = true,
                                UseShellExecute = false,
                                CreateNoWindow = true,
                                WorkingDirectory = projectDir
                            };
                            using var process = System.Diagnostics.Process.Start(startInfo);
                            if (process != null)
                            {
                                process.WaitForExit(1000);
                                if (process.ExitCode == 0)
                                {
                                    var gitVersion = process.StandardOutput.ReadToEnd().Trim();
                                    if (!string.IsNullOrWhiteSpace(gitVersion))
                                    {
                                        version = gitVersion;
                                        if (version.StartsWith("v", StringComparison.OrdinalIgnoreCase))
                                        {
                                            version = version.Substring(1);
                                        }
                                        var plusIdx = version.IndexOf('+');
                                        if (plusIdx > 0)
                                        {
                                            version = version.Substring(0, plusIdx);
                                        }
                                    }
                                }
                            }
                        }
                        catch
                        {
                            // Ignoruj chyby při zjišťování verze z gitu
                        }
                    }
                }
                <small class="text-muted">Version: v@(version)</small>
            </div>
            <div>
                <small>&copy; 2025 - LibraryApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></small>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/cs.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
